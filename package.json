{
  "name": "podcasters-forge",
  "private": true,
  "workspaces": [
    "web",
    "server"
  ],
  "scripts": {
     "dev": "npm --prefix web run dev",
  "prestart": "node scripts/dev-db.mjs",
  "start": "concurrently -k --raw -n server,web -c green,cyan \"npm -w server run dev\" \"npm -w web run dev\"",
  "dev-db": "node scripts/dev-db.mjs",
     "build": "npm --prefix web run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
  "lint": "eslint .",
  "lint:fix": "eslint . --fix",
    "setup": "npm ci"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^24.3.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.9.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "globals": "^16.4.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.0.1"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "axios": "^1.12.2"
  }
}
